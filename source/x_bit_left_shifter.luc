module x_bit_left_shifter #(
  SIZE = 32 : SIZE > 1,
  SHIFT = 4 : SHIFT > -1 & SHIFT < SIZE
  )(
    input a[SIZE],
    input shift,
    input pad,
    output out[SIZE]
  ) {
  
  mux_2 mux_2[SIZE] 
  sig shifted_bits[SIZE]
  
  always {
    shifted_bits = c{a[SIZE - SHIFT - 1:0], SHIFTx{pad}}
    repeat(i, SIZE, 0, 1) {
        mux_2.in[i][0] = a[i]
        mux_2.in[i][1] = shifted_bits[i]
    }
    mux_2.s0 = SIZEx{shift}
    out = mux_2.out
  }
}